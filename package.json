{
  "name": "@deoo/jira-mcp",
  "version": "1.0.1",
  "description": "MCP server for Jira integration using jira-client",
  "main": "dist/index.js",
  "bin": {
    "jira-mcp": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "verify-config": "node scripts/verify-config.js",
    "config-template": "node scripts/verify-config.js --template",
    "diagnose-mcp": "node scripts/diagnose-mcp.js",
    "test-npx": "npx . --help && npx . --version && echo 'âœ… npx commands work correctly!'",
    "test": "npm run build && npm run test-npx"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/deoooo/jira-mcp.git"
  },
  "keywords": [
    "jira",
    "mcp",
    "cli",
    "integration",
    "automation"
  ],
  "author": "deoooo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/deoooo/jira-mcp/issues"
  },
  "homepage": "https://github.com/deoooo/jira-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "dotenv": "^16.3.1",
    "jira-client": "^8.2.2"
  },
  "devDependencies": {
    "@types/jira-client": "^7.1.9",
    "@types/node": "^22.0.0",
    "typescript": "^5.0.0"
  }
}
